@{
    ViewData["Title"] = "Home Page";
}

@model User

<div class="text-center">
    <div class="row">
        <div class="col-6">
            <h2>Register Here</h2>
            <form action="/users/create" method="post">
                <div class="form-group">
                    <label for="First">First Name:</label>
                    <input asp-for="First" class="form-control">
                    <span asp-validation-for="First" class="text-danger"></span>
                </div>

                    <div class="form-group">
                    <label for="Last">Last Name:</label>
                    <input asp-for="Last" class="form-control">
                    <span asp-validation-for="Last" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="Email">Email:</label>
                    <input asp-for="Email" class="form-control">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="Password">Password:</label>
                    <input asp-for="Password" class="form-control">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="Confirm">Confirm Password:</label>
                    <input asp-for="Confirm" class="form-control">
                    <span asp-validation-for="Confirm" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Submit" class="btn btn-info">
                </div>
            </form>
        </div>
        <a href="signin">Login</a>
    </div>
</div>
